{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "jasmine": true,
    "node": true,
    "browser": true,
    "builtin": true,
    "es6": true
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "jest": true,
    "OS": true,
    "I18n": true
  },
  "rules": {
    "block-scoped-var": 2,
    "comma-dangle": [2, "never"],
    "comma-style": [2, "last"],
    "complexity": [1, 5],
    "curly": [2, "all"],
    "dot-notation": [2, { "allowKeywords": true }],
    "eol-last": 2,
    "eqeqeq": [2, "allow-null"],
    "guard-for-in": 2,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-cond-assign": [2, "except-parens"],
    "no-console": [2, { "allow": ["info", "warn", "error"] }],
    "no-const-assign": 2,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-delete-var": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-else-return": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-eval": 2,
    "no-ex-assign": 2,
    "no-extend-native": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 2,
    "no-fallthrough": 2,
    "no-func-assign": 2,
    "no-inner-declarations": [2, "functions"],
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-lonely-if": 2,
    "no-loop-func": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": [2, { "max": 2 }],
    "no-negated-in-lhs": 2,
    "no-nested-ternary": 2,
    "no-new": 2,
    "no-obj-calls": 2,
    "no-octal": 2,
    "no-proto": 2,
    "no-redeclare": [2, { "builtinGlobals": false }],
    "no-regex-spaces": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-sparse-arrays": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unreachable": 2,
    "no-unused-vars": 2,
    "no-with": 2,
    "one-var": [1, { "uninitialized": "always" }],
    "prefer-const": 1,
    "react/display-name": 0,
    "react/no-danger": 1,
    "react/no-did-update-set-state": [1],
    "react/no-is-mounted": 1,
    "react/no-render-return-value": 1,
    "react/prop-types": 1,
    "semi": [2, "always", { "omitLastInOneLineBlock": true }],
    "sort-vars": [0, { "ignoreCase": true }],
    "use-isnan": 2,
    "valid-typeof": 2,
    "wrap-iife": [2, "inside"]
  }
}
